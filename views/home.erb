<% unless current_user %>
	<br>
	<form method="POST" action="/sign-in">   
		<label for="username">Username</label>   
		<input type="text" name="username">   
		<label for="password">Password</label>   
		<input type="password" name="password">   
		<input type="submit"> 
	</form><br>
	<a href="/signup">Sign Up</a>

<% else %>
	<br>
	<button><a href="/log-out">Logout</a></button>
	<br><br>
	<%= current_user.username %><br><br>
	<a href="/users/<%= current_user.id %>">View Profile</a>
<% end %>

<a href="/members">Members List</a><br>

<div class="user_post">
	<% @posts.last(10).reverse.each do |post| %>
		<br>
			<div id="epost">
				<div id="uname">
					<%= post.user.username %><br>
				</div><br>
				<%= post.title %><br>
				<%= post.body %><br>
			</div>
	<% end %>
</div>
